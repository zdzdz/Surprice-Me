<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="navigatedTo" actionBarHidden="false">
    <StackLayout>
    	<Button text="Add Comment" tap="goToComments" />
    	
        <Label text="{{ name }}" textWrap="true" class="title" />
        <Label text="{{ description }}" />
        <Label text="{{ stars }}" />
        <Label text="{{ location.latitude }}" />
        <Label text="{{ location.longitude }}" />
        <Image id='logo' src="{{ logoUrl }}" tap="goToImageViewer" class="pictures" />
        <Image src="{{ imageUrl }}" tap="goToImageViewer" class="pictures" />
