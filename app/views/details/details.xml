                <Label text="{{ $value }}" textWrap="true" class="title" />
            </ListView.itemTemplate>
        </ListView> -->
        <ListView items="{{ picturesUrlsArr }}">
            <ListView.itemTemplate>
                <Image src="{{ $value }}" width="50" height="30" tap="goToImageViewer" />
                
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
