<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="navigatedTo" actionBarHidden="false">
    <StackLayout>
    	<GridLayout rows="auto" columns="auto, auto">
    	    <Button text="Add Comment" tap="goToComments" col="0" />
    	    <Button id="showOnMap" tap="showOnMap" col="1"/>
    	</GridLayout>
        
        <Label text="{{ name }}" textWrap="true" class="title" />
        <Label text="{{ description }}" />
        <Label text="{{ stars }}" />
        <Label text="{{ location.latitude }}" />
        <Label text="{{ location.longitude }}" />
        <Image id='logo' src="{{ logoUrl }}" tap="goToImageViewer" class="pictures" />
        <Image src="{{ imageUrl }}" tap="goToImageViewer" class="pictures" />
        <ListView items="{{ commentsArr }}">
            <ListView.itemTemplate>
                <GridLayout rows="auto, auto" columns="*">
                    <Label text="{{ $value.sender }}" textWrap="true" row="0" />
                    <Label text="{{ $value.content }}" textWrap="true" row="1" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
       <!--  <ListView items="{{ picturesUrlsArr }}">
            <ListView.itemTemplate>
                <StackLayout>
                    <Image src="{{ $value }}" width="200" height="100" tap="goToImageViewer" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView> -->
    </StackLayout>
</Page>
