<Page loaded="pageLoaded" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns="http://www.nativescript.org/tns.xsd">
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.mainContent>
            <StackLayout>
                <Button text="{{ mainContentText }}" textWrap="true" 
                tap="{{ onScaleDownPusherTransitionTap }}"/>
            </StackLayout>
        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <StackLayout class="drawerContent">
                <StackLayout class="headerContent">
                    <Label text="Where would you eat today?" />
                </StackLayout>
                <StackLayout class="drawerMenuContent">
                    <Label text="Favourites" textWrap="true" class="drawerMenuItem" tap="goToFavourites"/>
                    <Label text="Random Restaurant" textWrap="true" class="drawerMenuItem"/>
                    <Label text="Get Location" textWrap="true" 
                    class="drawerMenuItem" />
                    <Label text="Hello" textWrap="true" 
                    class="drawerMenuItem" />
                </StackLayout>
            </StackLayout>
        </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>
</Page>
