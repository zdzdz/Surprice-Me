<Page loaded="loadSignUpView">
	<Page.actionBar>
        <ActionBar title="Add a comment" >
            <NavigationButton tap="goBack" android.systemIcon="ic_menu_back" />
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <Label text="Your Name"  class="comment"/>
        <TextField text="{{author}}" width="300"/>
        <Label text="Your Comment"   class="comment" />
        <TextView text="{{comment}}" width="300" height="200"/>
       <Button tap="sendComment" id="send" />
       
    </StackLayout>
</Page>